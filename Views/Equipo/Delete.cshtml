@model Cisneros_LigaPro.Models.Equipo

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Eliminar Equipo";
}

<div class="container mt-5">
    <h2>¿Estás seguro de que deseas eliminar este equipo?</h2>
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Puntos:</strong> @Model.Puntos</p>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-controller="Equipo" asp-action="List" class="btn btn-secondary">Cancelar</a>
    </form>
</div>