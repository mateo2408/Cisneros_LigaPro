@model Cisneros_LigaPro.Models.Equipo

<!DOCTYPE html>
<html>
<head>
    <title>Tabla de Posiciones</title>
</head>
<body>
    <h2>@Model.Nombre</h2>
    <img src="@Url.Content("~/wwwroot/images/" + Model.Logo)" alt="Logo de @Model.Nombre" />
    <p>@Model.Descripcion</p>

    <form id="formPuntos">
        <label>Partidos Ganados:</label>
        <input type="number" id="ganados" value="0" />
        <label>Partidos Empatados:</label>
        <input type="number" id="empatados" value="0" />
        <label>Partidos Perdidos:</label>
        <input type="number" id="perdidos" value="0" />
        <button type="button" id="calcularPuntos">Calcular Puntos</button>
    </form>

    <p id="totalPuntos"></p>

    <script>
        $('#calcularPuntos').click(function () {
            const ganados = parseInt($('#ganados').val()) || 0;
            const empatados = parseInt($('#empatados').val()) || 0;
            const puntos = (ganados * 3) + (empatados * 1);
            $('#totalPuntos').text(`Total de puntos: ${puntos}`);
        });
    </script>
</body>
</html>